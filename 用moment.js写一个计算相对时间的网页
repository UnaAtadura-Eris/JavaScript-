<html>
<head>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script> //可以用CDN加载。
</head>
<body>
  <h1>Relative Time Calculator</h1>
  <p>Enter a date and time in the format YYYY-MM-DD HH:mm:ss and see how long ago or from now it is.</p>
  <input id="input" type="text" placeholder="2023-05-10 20:28:36" />
  <button id="button" onclick="calculate()">Calculate</button>
  <p id="output"></p>
  <script>
    function calculate() {
      // get the input value
      var input = document.getElementById("input").value;
      // parse it as a moment object
      var date = moment(input, "YYYY-MM-DD HH:mm:ss");
      // check if it is valid
      if (date.isValid()) {
        // calculate the relative time
        var relative = date.fromNow();
        // display the result
        document.getElementById("output").innerHTML = "The date and time you entered is " + relative + ".";
      } else {
        // display an error message
        document.getElementById("output").innerHTML = "Invalid input. Please enter a valid date and time.";
      }
    }
  </script>
</body>
</html>
